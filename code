    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        let uploadedDesign = null;
        let currentApparel = 'tshirt';
        let currentModel = 'male';
        let currentColor = '#ffffff';

        // File upload handling
        const fileInput = document.getElementById('fileInput');
        const uploadArea = document.getElementById('uploadArea');
        const uploadContent = document.getElementById('uploadContent');
        const previewContent = document.getElementById('previewContent');
        const designPreview = document.getElementById('designPreview');

        uploadArea.addEventListener('click', () => fileInput.click());

        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('border-blue-400', 'bg-blue-50');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('border-blue-400', 'bg-blue-50');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('border-blue-400', 'bg-blue-50');
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                handleFileUpload(files[0]);
            }
        });

        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length > 0) {
                handleFileUpload(e.target.files[0]);
            }
        });

        function handleFileUpload(file) {
            if (!file.type.startsWith('image/')) {
                alert('Please upload an image file');
                return;
            }

            const reader = new FileReader();
            reader.onload = (e) => {
                uploadedDesign = e.target.result;
                designPreview.src = uploadedDesign;
                uploadContent.classList.add('hidden');
                previewContent.classList.remove('hidden');
                updateMockup();
                document.getElementById('downloadBtn').disabled = false;
            };
            reader.readAsDataURL(file);
        }

        // Model selection
        document.querySelectorAll('.model-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.model-btn').forEach(b => {
                    b.classList.remove('bg-blue-900', 'border-blue-600');
                    b.classList.add('bg-gray-700', 'border-gray-600');
                });
                btn.classList.remove('bg-gray-700', 'border-gray-600');
                btn.classList.add('bg-blue-900', 'border-blue-600');
                
                currentModel = btn.dataset.model;
                showMockup(currentApparel, currentModel);
                updateMockup();
            });
        });

        // Apparel selection
        document.querySelectorAll('.apparel-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.apparel-btn').forEach(b => {
                    b.classList.remove('bg-blue-900', 'border-blue-600');
                    b.classList.add('bg-gray-700', 'border-gray-600');
                });
                btn.classList.remove('bg-gray-700', 'border-gray-600');
                btn.classList.add('bg-blue-900', 'border-blue-600');
                
                currentApparel = btn.dataset.type;
                showMockup(currentApparel, currentModel);
                updateMockup();
            });
        });

        // Color selection
        document.querySelectorAll('.color-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.color-btn').forEach(b => {
                    b.classList.remove('border-blue-500');
                    b.classList.add('border-gray-600');
                });
                btn.classList.remove('border-gray-600');
                btn.classList.add('border-blue-500');
                
                currentColor = btn.dataset.color;
                updateApparelColor();
            });
        });

        // Size control
        const sizeSlider = document.getElementById('sizeSlider');
        const sizeValue = document.getElementById('sizeValue');

        sizeSlider.addEventListener('input', () => {
            const scale = sizeSlider.value;
            sizeValue.textContent = Math.round(scale * 100) + '%';
            updateMockup();
        });

        function showMockup(type, model) {
            document.querySelectorAll('.mockup-item').forEach(item => {
                item.classList.add('hidden');
            });
            const mockupId = `${type}-${model}-mockup`;
            const mockupElement = document.getElementById(mockupId);
            if (mockupElement) {
                mockupElement.classList.remove('hidden');
            }
        }

        function updateApparelColor() {
            // Handle different body elements for different models
            const bodyElements = [
                document.getElementById(`${currentApparel}-${currentModel}-body`),
                document.getElementById(`${currentApparel}-${currentModel}-left`),
                document.getElementById(`${currentApparel}-${currentModel}-right`)
            ];
            
            bodyElements.forEach(element => {
                if (element) {
                    element.setAttribute('fill', currentColor);
                }
            });
        }

        function updateMockup() {
            if (!uploadedDesign) return;

            const scale = sizeSlider.value;
            let designAreas = [];
            
            // Handle shoes differently (they have left and right design areas)
            if (currentApparel === 'shoes') {
                designAreas = [
                    document.getElementById(`${currentApparel}-${currentModel}-left-design`),
                    document.getElementById(`${currentApparel}-${currentModel}-right-design`)
                ];
            } else {
                designAreas = [document.getElementById(`${currentApparel}-${currentModel}-design`)];
            }

            designAreas.forEach(designArea => {
                if (designArea) {
                    const size = Math.round(50 * scale);
                    
                    designArea.innerHTML = `
                        <div class="w-full h-full flex items-center justify-center">
                            <img src="${uploadedDesign}" 
                                 style="width: ${size}px; height: ${size}px; object-fit: contain;" 
                                 alt="Your design">
                        </div>
                    `;
                }
            });
            
            updateApparelColor();
        }

        // Download functionality
        document.getElementById('downloadBtn').addEventListener('click', () => {
            const mockupContainer = document.getElementById('mockupContainer');
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            
            // Create a simple download notification
            const notification = document.createElement('div');
            notification.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
            notification.textContent = '‚úì Mockup ready! (Demo - actual download would process the SVG)';
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        });

        // Reset functionality
        document.getElementById('resetBtn').addEventListener('click', () => {
            uploadedDesign = null;
            fileInput.value = '';
            uploadContent.classList.remove('hidden');
            previewContent.classList.add('hidden');
            document.getElementById('downloadBtn').disabled = true;
            
            // Reset to default design areas
            document.querySelectorAll('[id$="-design"]').forEach(area => {
                const text = area.id.includes('shoes') ? 'Design' : 'Your Design';
                area.innerHTML = `<div class="w-full h-full flex items-center justify-center text-gray-400 text-xs">${text}</div>`;
            });
            
            // Reset size slider
            sizeSlider.value = 1;
            sizeValue.textContent = '100%';
        });

        // Initialize
        showMockup('tshirt', 'male');
        updateApparelColor();
    </script>
